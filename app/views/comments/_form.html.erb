<%= form_for :comment, url:comments_path, local: true do |form| %>
<%= form.hidden_field :question_id, value: @question.id%>

<div class="form-grup">
  <p>
    <%= form.text_area :text,class:"form-control" %>
  </p>
</div>
<p>
  <%= form.submit "Comment", class:"btn btn-outline-light" %>
</p>

<% end %>
