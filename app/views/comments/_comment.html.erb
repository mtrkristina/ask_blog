<div class="card" style="width: 100%; color:#36486b;">
  <div class="card-header">
    <h3><%=comment.user.nickname%></h3>
  </div>
  <div class="card-body">
   <h5><%= comment.text%></h5>
 </div>
 <div class="text-right">
   <small><%=comment.created_at.strftime("%d %a, %Y %H:%M")%></small>
 </div>
</div>
<hr>
<%= link_to comment_path (comment),
               method: :delete,
               data: { confirm: 'Are you sure?' } do %>
               <img src="../destroy.png" alt="destroy" width="32px">

               <%end%>
<hr>
