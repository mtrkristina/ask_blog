<div class="show mt-5">
  <h3>Question:</h3>
  <div class="card" style="width: 100%; color:#36486b;">
    <div class="card-header">
      <h3><%= @question.user.nickname%></h3>
    </div>
    <div class="card-body">
     <h5><%= @question.text %></h5>
   </div>
  </div>

<div class="icon icon mt-5">
  <%= link_to edit_question_path(@question) do %>
    <img src="../edit.png" alt="edit" width="32px">
  <%end%>

  <%= link_to questions_path do %>
    <img src="../back.png" alt="back" width="32px">
  <%end%>
</div>
<hr>
<h3>Comments:</h3>
  <%= render @question.comments%>
  <hr>  
<h3>Add comment:</h3>
  <%=render 'comments/form'%>
</div>
