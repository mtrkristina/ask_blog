<form class="text-center border border-dark  p-5 mt-5" action="#!">

    <p class="h4 mb-4">Sign in</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autocomplete: "nickname", class:"form-control mb-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-info my-4 btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</form>
